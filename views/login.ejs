<div class="row" style="margin-top:5%">
  <div class="col-md-4 offset-md-4">
    <div class="row">
      <div class="col-md-8 offset-md-2" style="text-align:center">
        <img src="/images/logo.png" alt="Todo" class="img-fluid" style="max-width:35%">
      </div>
    </div>
    <div class="row" style="margin-top:4%;">
      <div class="col-md-12" style="text-align:center;">
        <h1 style="font-size:24px;font-weight:300;letter-spacing:-0.5px">Login</h1>
      </div>
    </div>

    <div class="row" style="margin-top:4%;display:none" id="alertWrapper">
      <div class="alert alert-danger col-md-12" role="alert" style="text-align:center" id="alertBox">

      </div>
    </div>
    <div class="row" style="margin-top:4%">
      <div class="col-md-12">
        <div class="card">
          <div class="card-body">
            <form method="post" action="/users/login" onsubmit="return validateLogin()">
              <div class="form-group">
                <label for="email">Email</label> <span style="color:red">*</span>
                <input type="text" class="form-control" id="email" name="email">
              </div>
              <div class="form-group">
                <label for="password">Password</label> <span style="color:red">*</span>
                <input type="password" class="form-control" id="password" name="password">
              </div>
              <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="row" style="margin-top:5%;">
      <div class="col-md-12" style="text-align:center;">
        <h1 style="font-size:15px;font-weight:300">&copy HCL Technologies 2018. All rights reserved.</h1>
      </div>
    </div>
  </div>
</div>
